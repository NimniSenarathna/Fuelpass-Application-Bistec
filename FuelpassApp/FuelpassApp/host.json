{
  "version": "2.0",
  "logging": {
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "excludedTypes": "Request"
      }
    }
  },

  "extensions": {
    "http": {
      "routePrefix": "",
      "cors": {
        "allowedOrigins": [
          "http://localhost:3000"
        ],
        "allowedMethods": [
          "GET",
          "POST",
          "PUT",
          "PATCH",
          "DELETE",
          "OPTIONS"
        ],
        "allowedHeaders": [
          "Content-Type",
          "Authorization"
        ],
        "exposedHeaders": []
      }
    }
  }
      }